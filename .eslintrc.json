{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", {"avoidEscape": true}],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn"
  },
  "globals": {
    "Hls": "readonly",
    "RTCPeerConnection": "readonly",
    "MediaStream": "readonly",
    "MediaStreamTrack": "readonly"
  }
}
